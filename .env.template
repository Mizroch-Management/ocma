# OCMA Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# REDIS CONFIGURATION (for caching and job queue)
# =============================================================================
REDIS_URL=redis://localhost:6379
# For production, use your cloud Redis provider URL
# REDIS_URL=redis://username:password@hostname:port

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION=your_openai_org_id_optional

# =============================================================================
# TWITTER/X API CONFIGURATION
# =============================================================================
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_REDIRECT_URI=http://localhost:3000/auth/callback/twitter

# =============================================================================
# FACEBOOK API CONFIGURATION
# =============================================================================
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/auth/callback/facebook

# =============================================================================
# INSTAGRAM API CONFIGURATION
# =============================================================================
# Instagram uses Facebook's API
INSTAGRAM_CLIENT_ID=your_facebook_app_id
INSTAGRAM_CLIENT_SECRET=your_facebook_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/callback/instagram

# =============================================================================
# LINKEDIN API CONFIGURATION
# =============================================================================
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/callback/linkedin

# =============================================================================
# TIKTOK API CONFIGURATION
# =============================================================================
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=http://localhost:3000/auth/callback/tiktok

# =============================================================================
# YOUTUBE API CONFIGURATION
# =============================================================================
YOUTUBE_CLIENT_ID=your_google_client_id
YOUTUBE_CLIENT_SECRET=your_google_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/callback/youtube

# =============================================================================
# PINTEREST API CONFIGURATION
# =============================================================================
PINTEREST_CLIENT_ID=your_pinterest_client_id
PINTEREST_CLIENT_SECRET=your_pinterest_client_secret
PINTEREST_REDIRECT_URI=http://localhost:3000/auth/callback/pinterest

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Default rate limits (can be overridden per endpoint)
DEFAULT_RATE_LIMIT_REQUESTS=100
DEFAULT_RATE_LIMIT_WINDOW=3600

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache TTL settings (in seconds)
CACHE_DEFAULT_TTL=3600
CACHE_ANALYTICS_TTL=1800
CACHE_AI_ANALYSIS_TTL=7200
CACHE_SOCIAL_POSTS_TTL=900

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
# Job queue settings
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features during development
ENABLE_AI_FEATURES=true
ENABLE_SCHEDULING=true
ENABLE_ANALYTICS=true
ENABLE_SOCIAL_MONITORING=true
ENABLE_CONTENT_OPTIMIZATION=true