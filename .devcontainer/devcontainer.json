{
  "name": "OCMA Development Container",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true
        }
      }
    }
  },
  "forwardPorts": [5173, 8080, 54321, 54322, 54323],
  "postCreateCommand": "npm install && npx supabase start",
  "postStartCommand": "echo 'DevContainer ready with /dangerously-skip-permissions enabled'",
  "remoteEnv": {
    "DANGEROUSLY_SKIP_PERMISSIONS": "true",
    "NODE_ENV": "development",
    "VITE_ENV": "development"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined",
    "--privileged"
  ],
  "containerUser": "node",
  "updateRemoteUserUID": true
}